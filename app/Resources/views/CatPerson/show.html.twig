{% extends 'JordiLlonchCrudGeneratorBundle::layout.html.twig' %}

{% block title %}Dane wybranej osoby{% endblock %}

{% block page %}

<h1>Dane wybranej osoby</h1>

<form class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label">Nazwisko:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.lastname }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Imię:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.firstname }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Miejscowość:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.catCity.getName }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Data urodzenia:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.birth|date('Y-m-d') }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Płeć:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ plec(entity.firstname) }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Firma:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.catCompanyOffice.getCatCompany.getName }}</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Oddział firmy:</label>
            <div class="controls">
                <span class="input-xlarge uneditable-input">{{ entity.catCompanyOffice.getName }}</span>
            </div>
        </div>
    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('people') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('people_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('people_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle')|escape('js') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}